// Reusable Components
const Section = ({ title, icon: Icon, children }) => (
  <div className="bg-white/80 backdrop-blur-xl rounded-2xl p-6 shadow-xl border-2 border-slate-200">
    <div className="flex items-center gap-3 mb-4">
      {Icon && <Icon className="h-6 w-6 text-cyan-600" />}
      <h2 className="text-xl font-bold text-slate-900">{title}</h2>
    </div>
    {children}
  </div>
);

const InfoGrid = ({ children }) => (
  <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
    {children}
  </div>
);

const InfoItem = ({ label, value, icon: Icon, badge, fullWidth }) => {
  if (!value) return null;
  
  return (
    <div className={fullWidth ? 'md:col-span-2' : ''}>
      <p className="text-xs font-bold text-slate-600 mb-1 flex items-center gap-1">
        {Icon && <Icon className="h-4 w-4" />}
        {label}
      </p>
      {badge ? (
        <span className={`inline-block px-3 py-1 rounded-full text-sm font-bold ${
          value.toLowerCase() === 'verified' || value.toLowerCase() === 'executive' ? 'bg-emerald-100 text-emerald-700' :
          value.toLowerCase() === 'partial' || value.toLowerCase() === 'manager' ? 'bg-amber-100 text-amber-700' :
          'bg-slate-100 text-slate-700'
        }`}>
          {value}
        </span>
      ) : (
        <p className="text-slate-900 font-semibold">{value}</p>
      )}
    </div>
  );
};

const SocialLink = ({ icon: Icon, label, url }) => (
  <a
    href={url.startsWith('http') ? url : `https://${url}`}
    target="_blank"
    rel="noopener noreferrer"
    className="flex items-center justify-between p-3 bg-slate-50 hover:bg-slate-100 rounded-xl transition-colors group"
  >
    <div className="flex items-center gap-3">
      <Icon className="h-5 w-5 text-cyan-600" />
      <span className="font-semibold text-slate-900">{label}</span>
    </div>
    <ExternalLink className="h-4 w-4 text-slate-400 group-hover:text-cyan-600" />
  </a>
);

export default LeadDetailEnriched;
